                    "$ref": "#/components/contentDescriptors/authKey"
                }
            ],
            "result": {
                "name": "interfaces",
                "schema": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Za-z0-9_]+$": {
                            "$ref": "#/components/contentDescriptors/args"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "errors": [
                {
                    "$ref": "#/components/errors/InvalidAuthKey"
                }
            ]
        },
        {
            "name": "readInterface",
            "summary": "Read from the interface.",
